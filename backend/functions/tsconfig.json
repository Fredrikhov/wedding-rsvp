{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "rootDir": "./src",
    "noImplicitAny": false,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
